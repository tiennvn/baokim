{% assign postList = Model.Data %}

<div class="flex flex-col w-full gap-5 px-6 md:gap-8 lg:px-2 2xl:px-0">
  <div class="flex flex-col w-full gap-5 md:gap-8 xl:flex-row">
    {% for post in postList.Items offset: 0 limit: 1 %}
      {% assign displayDate = post.DateUpdated | default: post.DatePublished | date: "%d THG %m, %Y" %}
      <div class="flex w-full relative xl:w-3/5 reveal fadeInLeft">
        <div class="relative w-full pt-[120.76%] md:pt-[56.23%] xl:pt-[55.59%]">
            <a href="{{ post.NiceUrl | prepend: "~/" | absolute_url }}">
                <img class="image-custom object-cover rounded-tl-[40px] rounded-br-[40px]"
                    src="{{ post.ImageFullUrl }}"
                    alt="{{ post.Title | raw }}">
                <div class="absolute inset-0 bg-black/40 rounded-tl-[40px] rounded-br-[40px]"></div>
            </a>
        </div>
        <div class="flex flex-col gap-3 text-white p-6 absolute w-full bottom-0">
            <div class="flex items-center text-body-2 gap-2 uppercase">
              <div class="tooltip">
                <div data-tooltip="{{ post.Category_Title | raw }}" class="tooltip-post tooltip-post-large">
                    <a href="{{ post.Category.NiceUrl | prepend: "~/" | absolute_url }}" class="line-clamp-1" >{{ post.Category_Title | raw }}</a>
                </div>
              </div>
              <p class="flex gap-2 items-center whitespace-nowrap">
                  <span class="w-1 h-1 bg-primary-1 rounded-full md:bg-white"></span>
                  <span>{{ displayDate | raw }}</span>
              </p>
            </div>
            <div class="flex">
                <p class="tooltip min-h-[56px] md:min-h-[80px] font-semibold text-header-1 md:text-heading-3 ">
                    <a data-tooltip="{{ post.Title | raw }}" href="{{ post.NiceUrl | prepend: "~/" | absolute_url }}" class="tooltip-post tooltip-post-large line-clamp-2">
                      {{ post.Title | raw }}
                    </a>
                </p>
            </div>
        </div>
    </div>
    {% endfor %}
    <div class="flex flex-col w-full gap-5 md:gap-8 xl:w-2/5 reveal fadeInRight">
      {% if postList.Items.size > 1 %}
        {% for post in postList.Items offset: 1 limit: 3 %}
          {% assign displayDate = post.DateUpdated | default: post.DatePublished | date: "%d THG %m, %Y" %}
          <div class="flex flex-col gap-4 md:flex-row md:gap-5">
            <div class="w-full md:w-1/3 lg:w-1/2">
                <div class="relative pt-[37.15%] md:pt-[56.19%] w-full">
                    <a href="{{ post.NiceUrl | prepend: "~/" | absolute_url }}">
                        <img class="image-custom object-cover rounded-tl-[40px] rounded-br-[40px]"
                            src="{{ post.ImageFullUrl }}"
                            alt="{{ post.Title | raw }}">
                    </a>
                </div>
            </div>
            <div class="flex flex-col gap-2 flex-auto md:w-2/3 lg:w-1/2">
                <div class="flex uppercase items-center text-primary-1 text-base leading-5 font-medium gap-2">
                   <div class="tooltip">
                      <div data-tooltip="{{ post.Category_Title | raw }}" class="tooltip-post tooltip-post-small">
                          <a href="{{ post.Category.NiceUrl | prepend: "~/" | absolute_url }}" class="line-clamp-1" >{{ post.Category_Title | raw }}</a>
                      </div>
                    </div>
                    <p class="flex gap-2 items-center whitespace-nowrap">
                        <span class="w-1 h-1 bg-primary-1 rounded-full"></span>
                        <span>{{ displayDate | raw }}</span>
                    </p>
                  </div>
                <div class="flex">
                    <p class="tooltip min-h-[56px] md:min-h-[80px] text-header-1 text-neutral-1-700 font-semibold md:text-heading-4 xl:text-heading-5">
                        <a data-tooltip="{{ post.Title | raw }}" href="{{ post.NiceUrl | prepend: "~/" | absolute_url }}" class="tooltip-post tooltip-post-small line-clamp-2">
                          {{ post.Title | raw }}
                        </a>
                    </p>
                </div>
            </div>
        </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
  {% if postList.Items.size > 4 %}
    <div class="grid w-full grid-cols-1 gap-8 xl:grid-cols-3 reveal fadeInUp">
      {% for post in postList.Items offset: 4 limit: 3 %}
        {% assign displayDate = post.DateUpdated | default: post.DatePublished | date: "%d THG %m, %Y" %}
        <div class="relative w-full pt-[62.29%] md:pt-[29%] xl:pt-[56.29%]">
          <img class="image-custom object-cover rounded-tl-[40px] rounded-br-[40px]"
              src="{{ post.ImageFullUrl }}" alt="{{ post.Title | raw }}">
          <div class="absolute inset-0 bg-black/40 rounded-tl-[40px] rounded-br-[40px]"></div>
          <div class="flex flex-col gap-2 text-white absolute w-full p-6 bottom-0">
            <div class="flex uppercase items-center text-body-2 gap-2">
              <div class="tooltip">
                <div data-tooltip="{{ post.Category_Title | raw }}" 
                    class="tooltip-post tooltip-post-medium">
                    <a href="{{ post.Category.NiceUrl | prepend: "~/" | absolute_url }}" class="line-clamp-1" >{{ post.Category_Title | raw }}</a>
                </div>
              </div>
              <p class="flex gap-2 items-center whitespace-nowrap">
                  <span class="w-1 h-1 bg-white rounded-full"></span>
                  <span>{{ displayDate | raw }}</span>
              </p>
            </div>
            <div class="w-full">
                <p class="tooltip min-h-[56px] md:min-h-[40px] xl:min-h-[80px] font-semibold text-header-1 md:text-heading-4">
                    <a data-tooltip="{{ post.Title | raw }}" href="{{ post.NiceUrl | prepend: "~/" | absolute_url }}" class="tooltip-post tooltip-post-medium line-clamp-2 md:line-clamp-1 xl:line-clamp-2">
                      {{ post.Title | raw }}
                    </a>
                </p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>
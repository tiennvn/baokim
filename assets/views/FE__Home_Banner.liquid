<div class="relative w-full mt-20 bg-no-repeat bg-cover bg-left animate-right" style="background-image: url('{{ ThemeSettings.homeImageBanner.fullUrl }}')">
  <div class="w-full mx-auto xl:max-w-7xl">
    <div class="flex flex-col w-full gap-10 h-full px-4 pt-[30%] pb-[55%] md:w-4/5 md:px-6 md:py-[20%] lg:py-[12%] lg:px-2 lg:w-2/3 lg:max-w-[611px] 2xl:px-0 2xl:py-[16%]">
      <div class="w-1/4 md:w-1/6">
        <div class="relative pt-[111%] w-full xl:pt-[108%]">
          <img
            alt="{{ ThemeSettings.homeLogoBanner.name }}"
            src="{{ ThemeSettings.homeLogoBanner.fullUrl }}"
            class="image-custom object-contain">
        </div>
      </div>
      <div class="text-display-5 leading-[59px] font-semibold text-secondary-1 md:text-display-4 md:leading-[69px]">
        {{ ThemeSettings.homeBannerTitle | raw }}
      </div>
      <div class="flex flex-col text-xl font-semibold text-secondary-1">
        <p>
          {{ ThemeSettings.homeBannerShortDescription | raw }}
        </p>
        <p>
          Hotline: {{ ThemeSettings.homePhoneNumberFirst | phone | raw }} - {{ ThemeSettings.homePhoneNumberSecond | phone | raw }}
        </p>
      </div>
      <div>
        {% a 
          controller: "CustomPage", 
          route_action: "Introduction", 
          route_area: "TWeb.Pages", 
          class: "text-white text-body-1 font-medium py-2 px-10 bg-primary-1 border border-primary-1 rounded-full btn-full" 
        %}
          Khám phá
        {% enda %}
      </div>
    </div>
  </div>
</div>
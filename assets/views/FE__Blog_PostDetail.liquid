{% assign post = Model.Data %}
{% assign displayDate = post.DateUpdated | post: post.DatePublished | date: "%d Thg %m, %Y" %}

<div class="flex flex-col w-full gap-4">
  <div class="w-full flex flex-col md:items-center gap-2 md:flex-row md:justify-between ">
      <div class="flex flex-auto gap-2 items-center text-primary-2 text-body-1 font-medium uppercase">
          <div class="tooltip">
              <div data-tooltip="{{ post.Category_Title | raw }}" class="tooltip-post tooltip-post-small">
                  <a href="{{ post.Category.NiceUrl | prepend: "~/"| absolute_url }}" class="line-clamp-1">
                    {{ post.Category_Title | raw }}
                  </a>
              </div>
          </div>
          <p class="flex gap-2 items-center whitespace-nowrap">
              <span class="w-1 h-1 bg-primary-1 rounded-full"></span>
              <span>{{ displayDate | raw }}</span>
          </p>
      </div>
      <div class="w-fit" data-href="https://1web.page/quyennguyen/blog/test-tin-tuc-2-t21.html" data-layout="button" data-size="large">
          <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{ post.NiceUrl | prepend: "~/"| absolute_url }}" 
          class="fb-xfbml-parse-ignore flex justify-center items-center gap-2 h-fit py-1 px-3 bg-info-400 rounded text-white w-fit">
              <i class="twi-17-facebook-fill text-base leading-none"></i>
              <p class="text-body-2 truncate">
                  Chia sáº»
              </p>
          </a>
      </div>
  </div>
  <h2 class="text-neutral-1-700 font-semibold text-header-1 md:text-heading-4 lg:text-heading-2">
    {{ post.Title | raw }}
  </h2>
</div>

<div class="ck-content">
  {{ post.Content | raw }}
</div>


